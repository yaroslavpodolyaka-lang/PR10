import numpy as np
import matplotlib.pyplot as plt

x = np.linspace(-2, 2, 2000)

x_safe = np.where(x == 0, 1e-9, x)

y = np.sin(x_safe) * (1 / x_safe) * np.cos(x_safe**2 + 1 / x_safe)


plt.figure(figsize=(8, 5))
plt.plot(x, y, linestyle='-', linewidth=2, color='blue', label='Y(x)')

plt.xlabel("x")
plt.ylabel("Y(x)")
plt.title("Графік функції Y(x) = sin(x)*(1/x)*cos(x² + 1/x)")
plt.legend()

plt.grid(True)
plt.show()
